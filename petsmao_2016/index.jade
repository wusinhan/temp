  // 圖片輪播 
  script(src='js/vendor/slick.min.js')
  script.
    $(function() {
      $('.slider').slick({
        autoplay: true,
        speed: 300,
        slidesToShow: 3,
        slidesToScroll: 1,
        responsive: [
          {
            breakpoint: 1280,
            settings: {
              arrows: false
            }
          },
          {
            breakpoint: 1200,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 1,
              arrows: false
            }
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1,
              arrows: false
            }
          }
        ]
      });
    });
  // 限制顯示行列 
  script(src='js/vendor/clamp.min.js')
  script.
    $(function() {
      $('.sale-name').each(function(index, element){
        $clamp(element, {clamp: '40px'});
      });
      $('.slider-box h3').each(function(index, element){
        $clamp(element, {clamp: '60px'});
      });
    });